<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thebank.thebank.Controllers.LoginController">
    <children>
        <TextField fx:id="username" alignment="CENTER" layoutX="300.0" layoutY="155.0" promptText="Enter the Username" />
        <Label layoutX="82.0" layoutY="68.0" text="WELCOME TO THE BANK" textAlignment="CENTER">
            <font>
                <Font name="Microsoft Sans Serif" size="36.0" />
            </font>
        </Label>
        <PasswordField fx:id="password" alignment="CENTER" layoutX="298.0" layoutY="213.0" promptText="Enter the password" />
        <Label layoutX="166.0" layoutY="154.0" text="Username">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="166.0" layoutY="212.0" text="Password">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Button fx:id="signin_btn" layoutX="166.0" layoutY="317.0" mnemonicParsing="false" onAction="#onClick_Signin" text="Sign in " />
        <Button fx:id="signup_btn" layoutX="300.0" layoutY="317.0" mnemonicParsing="false" onAction="#onClick_Signup" text="Sign up" textAlignment="CENTER" />
        <Button layoutX="428.0" layoutY="317.0" mnemonicParsing="false" onAction="#onClick_Clear" text="Clear" />


        <Button layoutX="480.0" layoutY="213.0" mnemonicParsing="false" onAction="#onClick_ShowPassword" text="Show password" />
      <Label fx:id="error_lbl" layoutX="298.0" layoutY="268.0" text="Error" />
    </children>

</AnchorPane>
